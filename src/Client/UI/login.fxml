<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.UI.LoginController">
    <AnchorPane>
      <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
             <VBox alignment="CENTER" prefWidth="200.0">
                <children>
                   <Label text="Choose your username" VBox.vgrow="NEVER">
                      <font>
                         <Font name="Trebuchet MS" size="14.0" />
                      </font>
                      <VBox.margin>
                         <Insets bottom="10.0" />
                      </VBox.margin>
                   </Label>
                   <JFXTextField fx:id="usernameField" alignment="BASELINE_CENTER" minWidth="196.0" prefWidth="196.0" promptText="Write your username here" unFocusColor="#7aed0e">
                      <font>
                         <Font name="Trebuchet MS" size="14.0" />
                      </font>
                   </JFXTextField>
                   <JFXButton fx:id="loginBtn" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" maxWidth="-Infinity" prefWidth="65.0" ripplerFill="#9cff67" style="-fx-background-color: green;" text="Login" textAlignment="CENTER">
                      <font>
                         <Font name="Trebuchet MS" size="14.0" />
                      </font>
                      <VBox.margin>
                         <Insets top="20.0" />
                      </VBox.margin>
                   </JFXButton>
                  <JFXButton fx:id="settingsBtn" buttonType="RAISED" ripplerFill="#c30000" style="-fx-background-color: red;" text="Settings">
                     <font>
                        <Font name="Trebuchet MS" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </JFXButton>
                </children>
             </VBox>
         </children>
      </HBox>
    </AnchorPane>
</StackPane>
